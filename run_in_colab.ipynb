    stderr_pipe = subprocess.STDOUT if (IS_DEBUG_MODE or capture_output) else subprocess.DEVNULL

    process = subprocess.run(
        command,
        shell=True,
        capture_output=(capture_output and not IS_DEBUG_MODE), # æ­£å¸¸æ¨¡å¼ä¸‹æ‰çœŸæ­£æ•ç²
        text=True,
        stdout=stdout_pipe,
        stderr=stderr_pipe
